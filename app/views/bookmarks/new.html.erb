<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to lists_path, class: "navbar-brand" do %>
      <%= image_tag "logo1.png" %>
    <% end %>
  </div>
</div>
<div class="container text-white mt-3 p-3 bg-dark">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment  %>
    <%= f.simple_fields_for @bookmark.movie, Movie.new do |movie_form| %>
      <%= movie_form.input :title, input_html: {class: "movie-title"} %>
      <%= movie_form.input :overview, input_html: {class: "movie-overview"} %>
      <%= movie_form.input :rating, input_html: {class: "movie-rating"} %>
      <%= movie_form.input :poster_url, input_html: {class: "movie-poster"} %>
    <% end %>
    <%= f.submit 'Add Movie', class: "btn btn-outline-light" %>
  <% end %>
</div>
<div class="movie-cards display-fetched-movies">
</div>
